generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//relacao um para um user - userplan
model User {
  id        Int       @id @default(autoincrement())
  idPlan    Int       @unique
  email     String    @unique
  cpf       String
  name      String
  password  String
  createdAt DateTime? @default(now())
  updatedAt DateTime?
  deletedAt DateTime?
  plan      Plan      @relation(fields: [idPlan], references: [id])
}

model Plan {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime
  deletedAt DateTime
  User      User?
}
